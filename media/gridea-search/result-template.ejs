  <div id="main-content" class="post-container main-container">
    <div id="content" class="flex:1;width:100%;">
      <% posts.forEach(function(post) { %>
      <article class="post i-card">
        <h2 class="post-title">
          <a href="<%= post.link %>"><%= post.title %></a>
        </h2>
        <div class="post-info">
          <time class="post-time"><%= post.dateFormat %> / <%= post.stats.text %></time>
          <% post.tags.forEach(function(tag) { %>
          <a href="<%= tag.link %>" class="post-tag i-tag i-tag-<%= ['', 'primary', 'success', 'warning', 'info','error','banana','other_1','other_2','other_3','other_4',][Math.floor(Math.random()*11)] %>">#<%= tag.name %></a><% }); %>
        </div>
        <div class="post-article">
          <div class="post-content">
            <div class="post-content-abstract">
              <%- post.searchedPreview %>
            </div>
            <a class="btn btn-text" href="<%= post.link %>">Read More ~</a>
          </div>
        </div>
      </article><% }); %>
    </div>
</div>
